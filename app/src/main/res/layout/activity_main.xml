<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tjddl.trust.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_scoreLeft"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="45dp"
                android:ems="10"
                android:text="10"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/tv_scoreRight"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:ems="10"
                android:text="10"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/imageView_score"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_gravity="center|bottom"
                app:srcCompat="@drawable/iterated_scoreboard" />

            <TextView
                android:id="@+id/tv_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="0"
                android:textSize="50sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_right"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="80dp"
                android:layout_weight="0.26"
                android:gravity="center" />

            <Spinner
                android:id="@+id/spinner_left"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_weight="0.27"
                android:gravity="left" />

        </LinearLayout>

        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_machine"
                android:layout_width="wrap_content"
                android:layout_height="281dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/iterated_machine" />

            <ImageView
                android:id="@+id/imageView_coinLeft"
                android:visibility="invisible"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|left"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="100dp"
                app:srcCompat="@drawable/iterated_coin" />

            <ImageView
                android:id="@+id/imageView_coinRight"
                android:visibility="invisible"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|right"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="100dp"
                app:srcCompat="@drawable/iterated_coin" />

            <ImageView
                android:id="@+id/imageView_leftPeep"
                android:layout_width="164dp"
                android:layout_height="182dp"
                android:layout_gravity="left|center"
                app:srcCompat="@drawable/splash_peep" />

            <ImageView
                android:id="@+id/imageView_rightPeep"
                android:layout_width="164dp"
                android:layout_height="182dp"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                app:srcCompat="@drawable/splash_peep" />

            <ImageView
                android:id="@+id/imageView_payoff"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                app:srcCompat="@drawable/iterated_payoffs" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
